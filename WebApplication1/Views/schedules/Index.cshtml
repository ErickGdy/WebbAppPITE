@model IEnumerable<WebApplication1.Models.schedule>

@{
	ViewBag.Title = "Citas"; 
	}

<!DOCTYPE html>


	<div class="containerSchedules">
		<h3>Citas</h3>

		<p>
			<a href="@Url.Action("Create", "schedules")" class="btn btn-primary" role="button">Agregar Nueva Cita</a>
		</p>
		<table class="table">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.ClientName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Date)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Hour)
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.ClientName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Date)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Hour)
					</td>
					<td>
						@Html.ActionLink("Edita", "Edit", new { id = item.ID }) |
						@Html.ActionLink("Ver", "Details", new { id = item.ID }) |
						@Html.ActionLink("Borrar", "Delete", new { id = item.ID })
					</td>
				</tr>
			}

		</table>
		</div>
