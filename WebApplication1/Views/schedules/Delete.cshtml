@model WebApplication1.Models.schedule

@{
	ViewBag.Title = "Borrar Cita";
}

	<div class="containerSchedules">
		<h3>Borrar Cita</h3>

		<p style="color:red; font-size:medium">¿Desea borrar la cita?</p>
		<hr />
		<dl class="dl-horizontal">
			<dt>
				@Html.DisplayNameFor(model => model.ClientName)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.ClientName)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.Date)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Date)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.Hour)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Hour)
			</dd>

		</dl>

		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

			<div class="form-actions no-color">
				<input type="submit" value="Borrar" class="btn btn-danger" /> <hr />
				@Html.ActionLink("Volver a Lista de Citas", "Index")
			</div>
		}
	</div>

